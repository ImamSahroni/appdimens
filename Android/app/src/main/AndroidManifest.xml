<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Hardware features for games -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.gamepad"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <!-- OpenGL ES 3.0 support for advanced games (optional) -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme">
        <!-- Main comprehensive demo activity -->
        <activity
            android:name="com.example.app.compose.en.ComprehensiveExampleActivity"
            android:exported="true"
            android:theme="@style/Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Individual feature demo activities -->
        <activity
            android:name="com.example.app.compose.en.FixedExampleActivity"
            android:exported="false"
            android:theme="@style/Theme" />
            
        <activity
            android:name="com.example.app.compose.en.DynamicExampleActivity"
            android:exported="false"
            android:theme="@style/Theme" />
            
        <activity
            android:name="com.example.app.compose.en.ScaledSdpsExampleActivity"
            android:exported="false"
            android:theme="@style/Theme" />
            
        <activity
            android:name="com.example.app.compose.en.ScaledSspsExampleActivity"
            android:exported="false"
            android:theme="@style/Theme" />
            
            
        <activity
            android:name="com.example.app.compose.en.PhysicalUnitsExampleActivity"
            android:exported="false"
            android:theme="@style/Theme" />
            
        <activity
            android:name="com.example.app.compose.en.AdvancedFeaturesExampleActivity"
            android:exported="false"
            android:theme="@style/Theme" />
        
        <!-- Traditional View-based MainActivity -->
        <activity
            android:name="com.example.app.views.kotlin.en.MainActivity"
            android:exported="false"
            android:theme="@style/Theme" />
            
        <!-- AppDimens Games Example Activity -->
        <activity
            android:name="com.example.app.games.GameActivity"
            android:exported="false"
            android:theme="@style/Theme"
            android:screenOrientation="sensor"
            android:configChanges="orientation|screenSize|keyboardHidden" />
    </application>

</manifest>